#!/usr/bin/env bash

setup_cmn()
{
    if [ ! -e $HOME/.spacemacs.d ]; then
        echo "=> Clone spacemacs"
        git clone git@github.com:syl20bnr/spacemacs.git $HOME/.spacemacs.d -b develop
    fi

    if [ ! -e $HOME/.doom-emacs.d ]; then
        echo "=> Clone doom-emacs"
        git clone https://github.com/hlissner/doom-emacs ~/.doom-emacs.d
        ~/.doom-emacs.d/bin/doom install
    fi

    if [ ! -e $HOME/.emacs.d ]; then
        echo "=> Clone chemacs2"
        git clone https://github.com/plexus/chemacs2.git ~/.emacs.d
    fi

    if ! which fzf 2>&1 > /dev/null; then
        echo "=> Clone fzf"
        git clone --depth 1 https://github.com/junegunn/fzf.git $HOME/.fzf
        $HOME/.fzf/install
    fi

    if [ ! -e $HOME/.tmux.d/extrakto ]; then
        echo "=> Clone extrakto"
        mkdir -p $HOME/.tmux.d
        git clone https://github.com/laktak/extrakto $HOME/.tmux.d/extrakto
        ln -s $HOME/.tmux.d/extrakto/extrakto.py $HOME/bin/extrakto
    fi
}

setup_nix()
{
    echo "=> Install apt packages"
    editors="neovim python3-neovim vim"
    devutils="cargo cmake build-essential tig"
    miscutils="curl dex duf fasd htop mpv multitail ncdu ripgrep tldr tmux tmuxinator tmux-themepack-jimeh tree zsh"
    packages="$editors $devutils $miscutils"
    sudo apt-get update -qq -y
    sudo apt-get upgrade -qq -y
    sudo apt-get install -qq -y $packages

    if [ ! "$SHELL" -ef "$(which zsh)" ]; then
        echo "=> Change SHELL to $(which zsh)"
        chsh -s $(which zsh)
    fi
}

setup_osx()
{
    if ! which brew 2>&1 > /dev/null; then
        echo "=> Install homebrew"
        /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
    fi

    echo "=> Install homebrew packages"
    packages="duf fasd htop mpv ncdu ripgrep tmux tree"
    brew update
    brew install $packages
}

case "$(uname -a)" in
    *Ubuntu*)
        setup_cmn
        setup_nix
        ;;
    Darwin*)
        setup_cmn
        setup_osx
        ;;
    *)
        echo "unknown os";
        exit 1
        ;;
esac
